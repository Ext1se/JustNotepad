<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data class="ProjectBinding">
        <variable
                name="vm"
                type="com.ext1se.notepad.ui.projects.ProjectViewModel"/>
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <androidx.cardview.widget.CardView
                        android:id="@+id/card_icon_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/AttributeCardViewStyle">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_icon"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/AttributeItemStyle"
                                android:paddingTop="@dimen/attribute_padding"
                                android:paddingBottom="@dimen/attribute_padding_half">

                            <com.ext1se.dialog.icon_dialog.IconView
                                    android:id="@+id/icon"
                                    android:layout_width="@dimen/attribute_icon_size"
                                    android:layout_height="@dimen/attribute_icon_size"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:idIcon="@{vm.idIcon}"
                                    app:tint="@color/colorDefault"
                                    tools:srcCompat="@drawable/ic_ok"/>

                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/icon"
                                    android:paddingStart="@dimen/attribute_padding"
                                    android:paddingEnd="@dimen/attribute_padding">

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/icon"
                                        style="@style/AttributeTitleStyle"/>

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/colorDefault"
                                        android:text="@string/project_icon_advice"/>

                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_color"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/AttributeItemStyle"
                                android:paddingBottom="@dimen/attribute_padding"
                                android:paddingTop="@dimen/attribute_padding_half">

                            <ImageView
                                    android:id="@+id/color"
                                    android:layout_width="@dimen/attribute_icon_size"
                                    android:layout_height="@dimen/attribute_icon_size"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:tint="@color/colorDefault"
                                    app:srcCompat="@drawable/ic_color"/>

                            <LinearLayout
                                    android:id="@+id/ll_color"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/color"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:paddingStart="@dimen/attribute_padding"
                                    android:paddingEnd="@dimen/attribute_padding"
                                    android:orientation="vertical">

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/project_color"
                                        style="@style/AttributeTitleStyle"/>

                                <TextView
                                        android:id="@+id/tv_project_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/colorDefault"
                                        android:text="@string/project_color_advice"/>

                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:id="@+id/card_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/AttributeCardViewStyle">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/attribute_padding">

                        <ImageView
                                android:id="@+id/icon_title"
                                android:layout_width="@dimen/attribute_icon_size"
                                android:layout_height="@dimen/attribute_icon_size"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:srcCompat="@drawable/ic_title"/>

                        <LinearLayout
                                android:id="@+id/ll_title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/attribute_padding"
                                android:paddingEnd="@dimen/attribute_padding"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/icon_title"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/project_title"
                                    style="@style/AttributeTitleStyle"/>

                            <EditText
                                    android:id="@+id/et_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:text="@={vm.project.name}"
                                    style="@style/AttributeEditTextStyle"
                                    android:hint="@string/project_hint_title"
                                    android:inputType="text"
                                    android:imeOptions="actionNext"
                                    android:nextFocusDown="@+id/et_description">
                                <!--<requestFocus/>-->
                            </EditText>
                        </LinearLayout>

                        <ImageView
                                android:id="@+id/icon_description"
                                android:layout_width="@dimen/attribute_icon_size"
                                android:layout_height="@dimen/attribute_icon_size"
                                android:layout_marginTop="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/ll_title"
                                app:srcCompat="@drawable/ic_list_black"/>

                        <LinearLayout
                                android:id="@+id/ll_description"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/attribute_padding"
                                android:paddingEnd="@dimen/attribute_padding"
                                app:layout_constraintTop_toTopOf="@id/icon_description"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/icon_description"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/task_description"
                                    style="@style/AttributeTitleStyle"/>

                            <EditText
                                    android:id="@+id/et_description"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/AttributeEditTextStyle"
                                    android:text="@={vm.project.description}"
                                    android:scrollbars="vertical"
                                    android:overScrollMode="always"
                                    android:inputType="textCapSentences|textMultiLine"
                                    android:hint="@string/task_hint_description"/>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_ok"
                tools:backgroundTint="@color/blackLight"
                android:layout_margin="12dp"
                app:color="@{vm.idColorTheme}"/>
    </RelativeLayout>
</layout>
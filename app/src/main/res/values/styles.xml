<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--<style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="AppTheme.White" parent="AppTheme.PopupOverlay">
        <item name="android:textColorSecondary">#fff</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
    </style>

    <public name="BaseTextStyle" type="style"/>
    <style name="BaseTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorDefault</item>
    </style>

    <public name="AttributeEditTextStyle" type="style"/>
    <style name="AttributeEditTextStyle" parent="BaseTextStyle">
        <item name="android:paddingTop">6dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <public name="CardViewStyle" type="style"/>
    <style name="CardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>

    <public name="AttributeCardViewStyle" type="style"/>
    <style name="AttributeCardViewStyle" parent="CardViewStyle">
        <item name="android:layout_marginTop">@dimen/card_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/card_margin_vertical</item>
        <item name="android:layout_marginStart">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/card_margin_horizontal</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <public name="ItemCardStyle" type="style"/>
    <style name="ItemCardStyle" parent="CardViewStyle">
        <item name="android:layout_marginTop">@dimen/item_card_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/item_card_margin_vertical</item>
        <item name="android:layout_marginStart">@dimen/item_card_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/item_card_margin_horizontal</item>
        <item name="cardElevation">@dimen/item_card_elevation</item>
        <item name="cardCornerRadius">@dimen/item_card_corner_radius</item>
    </style>

    <public name="AttributeItemStyle" type="style"/>
    <style name="AttributeItemStyle" parent="CardView">
        <item name="android:paddingStart">@dimen/attribute_padding</item>
        <item name="android:paddingEnd">@dimen/attribute_padding</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <public name="AttributeTitleStyle" type="style"/>
    <style name="AttributeTitleStyle" parent="BaseTextStyle">

    </style>

    <public name="ProjectTextStyle" type="style"/>
    <style name="ProjectTextStyle" parent="BaseTextStyle">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorDefault</item>
    </style>

    <style name="SwitchToolbarStyle" parent="AppTheme">
        <item name="colorControlActivated">#fff</item>
        <item name="colorSwitchThumbNormal">#e6e6e6</item>
        <item name="android:colorForeground">#000</item>
    </style>
</resources>

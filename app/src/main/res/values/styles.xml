<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="AppTheme.White" parent="AppTheme.PopupOverlay">
        <item name="android:textColorSecondary">#fff</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
    </style>

    <public name="AttributeEditTextStyle" type="style"/>
    <style name="AttributeEditTextStyle">
        <item name="android:textColor">@color/colorDefault</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">-4dp</item>
        <item name="android:layout_marginRight">-4dp</item>
    </style>

    <public name="AttributeCardViewStyle" type="style"/>
    <style name="AttributeCardViewStyle" parent="CardView">
        <item name="cardElevation">6dp</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <public name="AttributeItemStyle" type="style"/>
    <style name="AttributeItemStyle" parent="CardView">
        <item name="android:paddingStart">@dimen/attribute_padding</item>
        <item name="android:paddingEnd">@dimen/attribute_padding</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <public name="AttributeTitleStyle" type="style"/>
    <style name="AttributeTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBold</item>
    </style>

    <public name="ProjectTextStyle" type="style"/>
    <style name="ProjectTextStyle">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
